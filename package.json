{
  "private": true,
  "license": "Apache-2.0",
  "name": "kyma-price-calculator",
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://kyma-project.github.io/price-calculator",
  "scripts": {
    "start": "vite",
    "build": "INLINE_RUNTIME_CHUNK=false GENERATE_SOURCEMAP=false NODE_OPTIONS=--max-old-space-size=8192 vite build",
    "preview": "vite preview --port 3000",
    "deploy": "gh-pages -d build",
    "test": "vitest",
    "eslint-check": "eslint src/",
    "lint-check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check '**/*.{ts,tsx,js,jsx,json,html,css,yaml,md}'",
    "lint-fix": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --write '**/*.{ts,tsx,js,jsx,json,html,css,yaml,md}'",
    "lint-staged": "lint-staged --concurrent=false"
  },
  "dependencies": {
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@ui5/webcomponents": "^2.15.0",
    "@ui5/webcomponents-fiori": "^2.15.0",
    "@ui5/webcomponents-icons": "^2.15.0",
    "@ui5/webcomponents-react": "^2.15.0",
    "@ui5/webcomponents-base": "^2.15.0",
    "@ui5/webcomponents-react-charts": "^2.15.0",
    "jotai": "^2.13.0",
    "react": "^18.3.1",
    "react-csv": "^2.2.2",
    "react-dom": "^18.3.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz "
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/react": "^16.0.1",
    "@types/react-csv": "^1.1.10",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "^6.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.6",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,html,css,scss,yaml,md}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
